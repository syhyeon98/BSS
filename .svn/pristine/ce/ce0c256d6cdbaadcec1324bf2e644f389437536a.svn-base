<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.ddit.organization.dao.OrganizationDAO">
	
	<select id="departmentEmployeeList" resultType="kr.or.ddit.employee.vo.EmployeeVO" parameterType="string">
		SELECT EMP_NAME
		, EMP_CD
	    , (SELECT DEP_NAME
	        FROM DEPARTMENT DEP
	        WHERE EMP.DEP_CD = DEP.DEP_CD) AS DEP_NAME
	    ,  PO_NAME
   		FROM EMPLOYEE EMP
    	LEFT OUTER JOIN POSITION PO ON (EMP.PO_CD = PO.PO_CD)
	    WHERE EMP.DEP_CD = #{depCd}
	    ORDER BY PO.PO_PRIORITY ASC
	</select>
	
	<select id="empDetail" resultType="kr.or.ddit.employee.vo.EmployeeVO" parameterType="string">
		SELECT EMP_NAME
		, EMP.EMP_CD
		, EMP_MAIL
		, BUS_NAME
		, SUBSTR(TO_CHAR(DEP_NUM), 1, 3) || '-' ||
  				  SUBSTR(TO_CHAR(DEP_NUM), 4, 3) || '-' ||
                  SUBSTR(TO_CHAR(DEP_NUM), 7, 4) AS DEP_NUM
		, OUT_ATCH_NM
		FROM EMPLOYEE EMP
		LEFT OUTER JOIN BUSINESS BUS ON (EMP.BUS_CD = BUS.BUS_CD)
		LEFT OUTER JOIN DEPARTMENT DEP ON (EMP.DEP_CD = DEP.DEP_CD)
		LEFT OUTER JOIN OUT_ATCH OA ON (EMP.ATCH_NO = OA.ATCH_NO)
		WHERE EMP.EMP_CD = #{empCd}
	</select>
	
</mapper>